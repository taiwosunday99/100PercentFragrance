<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffcdd2"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".PercentFragrance">

    <TextView
        android:id="@+id/textView100"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/welcome_to_100_percent_fragrance"
        android:textSize="22sp"
        android:textStyle="bold"
        android:padding="16dp" />

    <TextView
        android:id="@+id/textPerfume"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView100"
        android:paddingStart="16dp"
        android:text="@string/home_of_designer_s_oil_perfumes"
        android:textColor="#c62828"
        android:textSize="30sp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="311dp"
        android:layout_below="@+id/textView100"
        android:layout_marginTop="83dp"
        android:src="@drawable/fragrances3"
        android:contentDescription="@string/todo" />

</RelativeLayout>